<%= simple_form_for :search, url: itineraries_path, method: "GET" do |f| %>
    <div class="d-flex align-items-center">
      <%= f.input :station %>
      <%= f.input :weather, as: :check_boxes, collection: ["sunny", "cloudy", "rainy"], input_html: { multiple: true }, include_blank: false, include_hidden: false  %>   
      <%= f.input :price, as: :check_boxes, collection: ["$", "$$", "$$$"], input_html: { multiple: true }, include_blank: false, include_hidden: false  %> 
      <%= f.input :duration, as: :check_boxes, collection: ["1h-2h", "2h-4h", "More than 4h"], input_html: { multiple: true }, include_blank: false, include_hidden: false  %> 
      <%= f.input :sort, as: :radio_buttons, collection: ["Populars", "Newests", "Oldests", "Random"], include_blank: false, include_hidden: false %> 
    </div>
    <%= f.input :categories, as: :check_boxes, collection: ["restaurant", "culture", "drinks","outdoor","original"], input_html: { multiple: true }, include_blank: false, include_hidden: false  %> 
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>