<div class="i-header mb-5">
  <div class="row">
    <div class="col-9">
      <h2><%= @itinerary.title %></h2>
      <p class= "mt-5"><%= @itinerary.description %></p>
      <div class="info-text d-flex">
        <div class="info-text-station py-5">
          <p><i class="fa-solid fa-train-subway"></i>   <%= @itinerary.station.name %></p>
        </div>
        <div class="info-text-rating p-5">
          <i class="fa-solid fa-star"></i>
          <%= @itinerary.rating %>
        </div>
        <div class="info-text-review p-5">
          <p><i class="fa-solid fa-comment"></i> <%= @itinerary.reviews.count%> reviews </p>
        </div>
        <div class="username p-5">
          <%= @itinerary.user.first_name %>
        </div>
      </div>
      <div class="categories">
        <p>
          <% if @itinerary.restaurant == true  %>
            <i class="fa-solid fa-utensils"></i>
          <% end  %>
          <% if @itinerary.culture == true  %>
            <i class="fa-solid fa-palette"></i>
          <% end  %>
          <% if @itinerary.drinks == true  %>
            <i class="fa-solid fa-champagne-glasses fa-5x"></i>
          <% end  %>
          <% if @itinerary.outdoor == true  %>
            <i class="fa-solid fa-tree-city fa-2x"></i>
          <% end  %>
          <% if @itinerary.original == true  %>
            <i class="fa-solid fa-face-grin-stars fa-2x"></i>
          <% end  %>
        </p>
      </div>
    </div>
    <div class="col-3">
      <div class="info-box d-flex justify-content-center">
        <div class="hour">
          <p><i class="fa-solid fa-clock"></i> <%= @itinerary.duration %></p>
        </div>
        <div class="price">
          <p><%= @itinerary.price %></p>
        </div>
        <div class="weather">
        <p>
            <% if @itinerary.sunny == true  %>
              <i class="fa-solid fa-sun"></i>
            <% end  %>
            <% if @itinerary.rainy == true  %>
              <i class="fa-solid fa-cloud-rain"></i>
            <% end  %>
            <% if @itinerary.cloudy == true  %>
              <i class="fa-solid fa-cloud-sun"></i>
            <% end  %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container activities">
  <% @itinerary.activities.each do|activity| %>
    <div class="mb-5 d-flex w-80 justify-content-between">
      <div>
        <h4><%= activity.title %></h4>
        <div class="activity-address d-flex">
          <i class="fa-solid fa-location-dot"></i>
          <p><%= activity.address %></p>
        </div>
        <p><%= activity.description %></p>
      </div>
      <%= cl_image_tag activity.photo.key, width: 200, height: 150, class: "activity-img"%>
    </div>
    <% end %>
</div>
<div class="map activities">
  <div style="width: 100%; height: 400px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
<div class="container">
  <div class="review-title d-flex align-items-center">
    <div class="heart-font">
      <% @itinerary.reviews.count %>
      <i class="fa fa-heart fa-2x"></i>
    </div>
    <div class="review-text">
      <h2 class="ml-2"><%= @itinerary.title %></h2>
      <p><%= @itinerary.reviews.count %> reviews</p>
    </div>
  </div>
  </div>
  <div class="container review-container">
    <% if @itinerary.reviews.count > 0  %>
      <div class="reviews-grade d-flex justify-content-center">
        <% @itinerary.reviews.each do|review| %>
          <div class="review-comment">
            <p class><%= review.content %></p>
          </div>
        <% end %>
      </div>
    <% end %>
</div>
